    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "include": [ "./src" ],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
